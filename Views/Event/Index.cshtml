@model IEnumerable<EventeaseP7.Models.Events>

@{
    ViewData["Title"] = "Event Management Dashboard";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container">
    <h1 class="my-4 text-center text-primary">Event Management Dashboard</h1>

    <div class="row mb-4">
        <div class="col-12">
            <a class="btn btn-success" asp-action="Create">Create New Event</a>
        </div>
    </div>

    <!-- Events Table -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h4 class="card-title">Upcoming Events</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.EventName)</th>
                        <th>@Html.DisplayNameFor(model => model.EventDate)</th>
                       
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                     
                        <th>@Html.DisplayNameFor(model => model.Venue)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                            <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
                          
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                          
                            <td>@Html.DisplayFor(modelItem => item.Venue.Venue_Name)</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.EventID">Edit</a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.EventID">Details</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
