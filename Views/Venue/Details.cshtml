@model EventeaseP7.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
       
        <dt class="col-sm-2">
            Venue Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image_Url))
            {
                <img src="@Model.Image_Url" alt="Venue Image" width="250" height="250" style="object-fit:cover; border-radius:12px;" />
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Venue_ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>